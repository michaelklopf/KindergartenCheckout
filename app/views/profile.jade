doctype html
html(lang="en")
  head
    meta(charset='utf-8')
    meta(name='viewport', content='width=device-width, initial-scale=1.0')
    title Checkout
    // CSS content
    link(rel='stylesheet', href='/css/basic.css')
    link(rel='stylesheet', href='/css/bootstrap.min.css')
    link(rel='stylesheet', href='/css/font-awesome.min.css')
    // JS content is right before closing body tag
  body
    // All page content is wrapped in here
    div#wrap
      // Header
      div.navbar.navbar-default.navbar-fixed-top
          div.container
              div.navbar-header
                  button(
                    class='navbar-toggle',
                    type='button',
                    data-toggle='collapse',
                    data-target='.navbar-collapse')
                      span.icon-bar
                      span.icon-bar
                      span.icon-bar
                  a(class='navbar-brand', href='/') Node Auth
              div.collapse.navbar-collapse
                  ul.nav.navbar-nav
                      li.active
                        if user
                          a(href='#/') Events
                      li
                        if !user
                          a(href='/login') Login
                      li
                        if !user
                          a(href='/signup') Signup
                      li
                        if user
                          a(href='/logout') Logout
                      li
                        if user
                          p.navbar-text You are logged in with #{user.local.email}.
      // React here please
      div#container.container

    // Footer
    div#footer
        div.container
            p.text-muted.credit Page made by me,
              <a href="http://twitter.com/authorname/">@authorname</a>.

    // Bootstrap core JavaScript, placed here for faster page load
    script(type='text/javascript' src='/js/profile/main.js')
